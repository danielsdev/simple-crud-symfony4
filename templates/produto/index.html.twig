{% extends 'base.html.twig' %}

{% block title %}Listagem de produto - {% endblock %}

{% block body %}

    {% for flashMessage in app.session.flashbag.get('success') %}

        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
        
    {% endfor %}

    <h1>Listagem de produto</h1>
    <hr>

    <div class="col-md-12">
        <a class="btn btn-lg btn-primary float-right" href="">Adicionar produto</a>
    </div> 

    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <th>Cod.</th>
                <th>Nome</th>
                <th>Preço</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>

            {% for produto in produtos %}

                <tr>
                    <td>{{ produto.id }}</td>
                    <td>{{ produto.nome }}</td>
                    <td>{{ produto.preco }}</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href=""><i class="fas fa-eye"></i></a>
                        <a class="btn btn-sm btn-warning" href=""><i class="fas fa-pencil-alt"></i></a>
                        <a class="btn btn-sm btn-danger" href=""><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                
            {% endfor %}

        </tbody>

    </table>

{% endblock %}
